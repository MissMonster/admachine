         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.xmlan</groupId>
    <artifactId>admachine</artifactId>
    <packaging>war</packaging>
    <version>1.01-SNAPSHOT</version>
    <name>AD_Machine</name>

    <repositories>
        <repository>
            <id>alimaven</id>
            <name>aliyun maven</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public</url>
        </repository>
        <repository>
            <id>jboss</id>
            <name>jboss maven</name>
            <url>http://repository.jboss.com/nexus/content/repositories/root_repository/maven2/</url>
        </repository>
        <repository>
            <id>spring</id>
            <name>Spring Framework Release</name>
            <url>http://maven.springframework.org/release/</url>
        </repository>
    </repositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <encoding>UTF-8</encoding>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <spring.version>4.3.13.RELEASE</spring.version>
        <mybatis.version>3.4.4</mybatis.version>
        <mybatis-spring.version>1.3.1</mybatis-spring.version>
        <log4j2.version>2.8.2</log4j2.version>
        <slf4j.version>1.7.25</slf4j.version>
        <taglib.version>1.2.5</taglib.version>
        <jackson.version>2.7.4</jackson.version>
        <shiro.version>1.3.2</shiro.version>
        <mysql.version>5.1.41</mysql.version>
        <mssql.version>6.2.1.jre8</mssql.version>
        <dbcp.version>1.4</dbcp.version>
        <validator.version>5.2.4.Final</validator.version>
        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
        <groovy.version>2.4.13</groovy.version>
    </properties>

    <dependencies>
        <!-- <editor-fold desc="Groovy"> -->
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
