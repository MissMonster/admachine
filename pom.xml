            <artifactId>jsp-api</artifactId>
            <version>2.2</version>
        </dependency>
        <!-- </editor-fold> -->

        <!-- <editor-fold desc="Security and Permission"> -->
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-core</artifactId>
            <version>${shiro.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>commons-beanutils</groupId>
