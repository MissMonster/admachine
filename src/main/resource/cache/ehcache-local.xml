<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">

    <diskStore path="../cache/ad/machine"/>

    <!-- 默认缓存配置. 自动失效：最后一次访问时间间隔60秒失效，若没有访问过自创建时间120秒失效。-->
    <defaultCache maxEntriesLocalHeap="2000" eternal="false" timeToIdleSeconds="60" timeToLiveSeconds="120"
                  overflowToDisk="true" statistics="true"/>

    <!-- 系统缓存 -->
    <cache name="sysCache" maxEntriesLocalHeap="2000" eternal="true" overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 用户缓存 -->
    <cache name="userCache" maxEntriesLocalHeap="2000" eternal="true" overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 广告相关缓存 -->
    <cache name="advertisementCache" maxEntriesLocalHeap="2000" eternal="true" overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 集团缓存 -->
    <cache name="corpCache" maxEntriesLocalHeap="2000" eternal="true" overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 工作流模块缓存 -->
    <cache name="actCache" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 简单页面缓存 -->
    <cache name="pageCachingFilter" maxEntriesLocalHeap="2000" eternal="false" timeToIdleSeconds="120"
           overflowToDisk="true" memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <!-- 系统活动会话缓存 -->
    <cache name="activeSessionsCache" maxEntriesLocalHeap="10000" eternal="true" overflowToDisk="true"
           diskPersistent="true" diskExpiryThreadIntervalSeconds="600" memoryStoreEvictionPolicy="LFU"
           statistics="true"/>

</ehcache>
